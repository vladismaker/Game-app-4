<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D8636262">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Уровень"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textViewLevel"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/panel2">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieHeart1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:lottie_rawRes="@raw/heart2"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:scaleType="fitCenter"
                    />
                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieHeart2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:lottie_rawRes="@raw/heart2"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:scaleType="fitCenter"
                    />
                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieHeart3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:lottie_rawRes="@raw/heart2"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:scaleType="fitCenter"
                    />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Белый"
                    android:background="@color/red"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:paddingTop="100dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/textRight"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingTop="100dp"/>
        </LinearLayout>
    </LinearLayout>

    <com.mindorks.placeholderview.SwipePlaceHolderView
        android:id="@+id/swipeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieSuccess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/correct"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieFail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/fail2"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_repeatCount="0"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_marginTop="70dp"
        android:layout_gravity="center|bottom"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginBottom="18dp">
    </androidx.fragment.app.FragmentContainerView>
</FrameLayout>
